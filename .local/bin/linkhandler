#!/bin/bash

# Feed script a url or file location.

PDF_VIEWER=/usr/bin/zathura
IMAGE_VIEWER=imv
SVG_IMAGE_VIEWER="/usr/bin/inkview"
MEDIA_VIEWER=mpv
FALLBACK_BROWSER=$BROWSER


# Check "$@" has a protocol, if yes, open it in browser.
if [[ "$@" == *://* ]]; then
    # focus firefox if it's Open

    if [[ "$1" = http* ]]; then
        $FALLBACK_BROWSER "$@" >/dev/null 2>&1
    else
        xdg-open "$@" >/dev/null 2>&1
    fi

else
    cd "~/Projects/main/wiki/books"
    $FALLBACK_BROWSER "$@" >/dev/null 2>&1

    # Check file exists, if yes, open it in browser.
    if [ -f "~/Projects/main/wiki/books/$@" ]; then
        # focus firefox if it's Open
        $FALLBACK_BROWSER "file:///home/inom/Projects/main/wiki/books/$@" >/dev/null 2>&1
    else
        $FALLBACK_BROWSER "$@" >/dev/null 2>&1
    fi
fi


